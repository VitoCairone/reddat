<h1><%= @sub.name %> Links Index</h1>

<% @links = @sub.links.order("(upvotes - downvotes) DESC") %>
<ul>
	<!-- .order cannot be applied after .all, but works on the class object -->
	<% @links.each do |link| %>
	  <% @link = link %>
		<%= render "links/link_with_comments" %>
	<% end %>
</ul>

<%= link_to "Add Link", new_link_url %>